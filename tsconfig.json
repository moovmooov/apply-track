{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": ["node_modules"],
  "include": ["./**/*.ts", "./**/*.tsx", ".plasmo/index.d.ts"],
  "compilerOptions": {
    "types": ["chrome", "node"],
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "baseUrl": ".",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  }
}
